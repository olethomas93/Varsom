<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.VarsomWidget.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:columnCount="12"
    android:rowCount="1"
    android:background="@color/warning_level1"
    android:theme="@style/Theme.VarsomWidget.AppWidgetContainer"
    android:id="@+id/root"
    android:orientation="horizontal"
    android:clickable="true"


    >

    <LinearLayout
        android:id="@+id/left_container"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_columnWeight="1.5"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/risk_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="3"
            android:src="@drawable/level_1"/>

        <TextView
            android:id="@+id/risk_number"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_columnWeight="10"
        >


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short Description of Risk"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/area_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area Name"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/risk_description"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Unstable conditions due to wind slabs in lee areas. A few naturally triggered avalanches may occur. Avalanches can get large. Persistent weak layers may also be triggered due to increased weight load from new snow."
            android:textColor="@color/white"
            android:textSize="9sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_columnWeight="0.5">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@drawable/warning_0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@drawable/warning_4" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@drawable/warning_3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@drawable/warning_2" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@drawable/warning_1" />


    </LinearLayout>


</GridLayout>