<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.VarsomWidget.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:background="@drawable/widget_bg"
    android:theme="@style/Theme.VarsomWidget.AppWidgetContainer"
    android:orientation="vertical"
    android:id="@+id/card"


    >
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:columnCount="12"
        android:rowCount="1"
        android:orientation="horizontal"


        >

        <LinearLayout
            android:id="@+id/left_container"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1.5"
            android:layout_height="wrap_content"
            >


            <ImageView
                android:id="@+id/risk_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="3"
                android:src="@drawable/level_1"/>

            <TextView
                android:id="@+id/risk_number"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_columnWeight="10"
            >


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short Description of Risk"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/area_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area Name"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/risk_description"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Unstable conditions due to wind slabs in lee areas. A few naturally triggered avalanches may occur. Avalanches can get large. Persistent weak layers may also be triggered due to increased weight load from new snow."
                android:textColor="@color/white"
                android:textSize="9sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_columnWeight="0.4">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/warning_0" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/warning_4" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/warning_3" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/warning_2" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/warning_1" />


        </LinearLayout>


    </GridLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/risk_yesterday"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="3"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/roundedtext"></TextView>

        <TextView
            android:id="@+id/item_date_yesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="9sp"
            android:text="02/09"></TextView>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/risk_today"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="3"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/roundedtext"></TextView>

        <TextView
            android:id="@+id/item_date_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="9sp"
            android:text="02/09"></TextView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/risk_tomorrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="3"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/roundedtext"></TextView>

        <TextView
            android:id="@+id/item_date_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="9sp"
            android:text="02/09"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/risk_dayafter"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="3"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/roundedtext"></TextView>

        <TextView
            android:id="@+id/item_date_dayafter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="9sp"
            android:text="02/09"></TextView>
    </LinearLayout>
</LinearLayout>

</LinearLayout>