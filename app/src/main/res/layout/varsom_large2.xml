<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    style="@style/Widget.VarsomWidget.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/warning_level1"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="0dp"


    android:theme="@style/Theme.VarsomWidget.AppWidgetContainer">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="12"
        android:orientation="horizontal"
        android:padding="0dp"
        android:rowCount="1"


        >

        <LinearLayout
            android:id="@+id/left_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1.5"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/risk_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="3"
                android:src="@drawable/level_1" />

            <TextView
                android:id="@+id/risk_number"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="10"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short Description of Risk"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/area_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area Name"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/risk_description"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Unstable conditions due to wind slabs in lee areas. A few naturally triggered avalanches may occur. Avalanches can get large. Persistent weak layers may also be triggered due to increased weight load from new snow."
                android:textColor="@color/white"
                android:textSize="9sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/warning_0" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/warning_4" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/warning_3" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/warning_2" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/warning_1" />


        </LinearLayout>


    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/risk_yesterday"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="10sp"
                android:background="@drawable/roundedtext"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/item_date_yesterday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="02/09"
                android:textSize="9sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/risk_today"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="10sp"
                android:background="@drawable/roundedtext"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/item_date_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="02/09"
                android:textSize="9sp"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/risk_tomorrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="10sp"
                android:background="@drawable/roundedtext"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/item_date_tomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="02/09"
                android:textSize="9sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/risk_dayafter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="10sp"
                android:background="@drawable/roundedtext"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/item_date_dayafter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="02/09"
                android:textSize="9sp"></TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>