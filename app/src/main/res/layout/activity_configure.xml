<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.northei.skredvarsel.Configure">
    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:inputType="text"
        app:iconifiedByDefault="false"
        app:queryHint="Region">

    </SearchView>
    <TextView
        android:id="@+id/minposisjon"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="My position"
        android:gravity="left"/>

    <ListView
        android:id="@+id/list_region"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/varsomtekst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Data from www.varsom.no" />


</LinearLayout>