<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1a1a"
    android:fitsSystemWindows="true"
    tools:context="com.appkungen.skredvarsel.Configure">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/configure_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2d2d2d"
        android:elevation="8dp"
        app:title="Select Region"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />

    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="#2d2d2d"
        android:elevation="2dp"
        android:padding="4dp"
        android:iconifiedByDefault="false"
        android:queryHint="Search regions..."
        android:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <TextView
        android:id="@+id/minposisjon"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:background="#2d2d2d"
        android:elevation="2dp"
        android:text="@string/use_my_location"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground" />

    <ListView
        android:id="@+id/list_region"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="#1a1a1a"
        android:divider="#3d3d3d"
        android:dividerHeight="1dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false" />

    <TextView
        android:id="@+id/varsomtekst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/data_from_www_varsom_no"
        android:textColor="#888888"
        android:textSize="12sp" />

</LinearLayout>